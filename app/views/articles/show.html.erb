<div class="article">
  <h1 class="article_title"><%= @article.title %></h1>
  <div class="article_detail">
    <div>
      <p><%= @article.company.display_name %></p>
      <p><%= @article.display_created_at %></p>
    </div>
    <% if company_signed_in? && current_company.has_written?(@article) %>
    <div class="article_detail_actions">
      <div class="dropdown">
        <%= image_tag 'actions.svg', class: 'dropbtn' %>
        <div class="dropdown-content mini">
          <%= link_to '編集する', edit_article_path(@article) %>
          <%= link_to '削除する', article_path(@article), data: { method: 'delete', confirm: '本当に削除してもよろしいですか？' } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="article_content">
      <p><%= @article.Job_title %></p>
      <p><%= @article.employment %></@>
      <p><%= @article.education %></p>
      <p><%= @article.licensure %></p>
      <p><%= @article.documents %></p>
      <p><%= @article.selection %></p>
      <p><%= @article.screening_location %></p>
      <p><%= @article.created_at %></p>
      <p><%= @article.updated_at %></p>
  </div>
  <div class="article_heart">
    <% image_tag 'heart.svg' %>
  </div>
  <% if user_signed_in? %>
    <div class="article_heart">
      <%= link_to article_like_path(@article), data: { method: 'post' } do %>
        <%= image_tag 'heart.svg' %>
      <% end %>
    </div>
  <% end %>
</div>