<!DOCTYPE html>
<html>
  <head>
    <title>転職サイト</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" crossorigin="anonymous">
  </head>

  <body>
  <header>
    <div class="header-nav container clear">
      <div class="header-left">
        <h1><%= link_to '転職サイト', root_path %></h1>
      </div>
      <div class="header-right">
        <ul class="navbar">
          <% if user_signed_in? %>
          <li class="navbar-item"><%= link_to 'ユーザーログアウト', destroy_user_session_path,　data: { method: 'delete' } %></li>
          <% elsif company_signed_in? %>
          <li class="navbar-item"><%= link_to '法人ログアウト', destroy_company_session_path,　data: { method: 'delete' } %></li>
          <% else %>
          <li class="navbar-item"><%= link_to 'ユーザーログイン', new_user_session_path %></li>
          <li class="navbar-item"><%= link_to '法人ログイン', new_company_session_path %></li>
          <li class="navbar-item"><%= link_to 'ユーザー登録', new_user_registration_path %></li>
          <li class="navbar-item"><%= link_to '法人登録', new_company_registration_path %></li>
          <li class="navbar-item"><a href='#'>簡単ログイン</a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </header>
    <% if flash.present? %>
      <div class="flash">
        <% flash.each do |key, value| %>
          <div class="<%= key %>"><%= value %></div>
        <% end %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
