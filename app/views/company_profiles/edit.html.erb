  <div class="main">
  <div class="container">
    <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <%= form_with(model: @profile, url: company_profile_path, method: 'put', local: true) do |f| %>
      <div>
        <%= f.label :avatar, 'アバター' %>
      </div>
      <div>
        <%= f.file_field :avatar %>
      </div>
      <div>
        <%= f.label :company_name, '法人名' %>
      </div>
      <div>
        <%= f.text_field :company_name, class: 'text' %>
      </div>
      <div>
        <%= f.label :introduction, '説明文' %>
      </div>
      <div>
        <%= f.text_area :introduction %>
      </div>
      <div>
        <%= f.label :address, '場所' %>
      </div>
      <div>
        <%= f.text_field :address, class: 'text' %>
      </div>
      <div>
        <%= f.label :phone_number, '電話番号' %>
      </div>
      <div>
        <%= f.text_field :phone_number, class: 'text'%>
      </div>
      <div>
        <%= f.label :subscribed, '通知を受け取る' %>
        <%= f.check_box :subscribed %>
      </div>

      <%= f.submit '保存', class: 'btn-primary' %>
    <% end %>
  </div>
</div>