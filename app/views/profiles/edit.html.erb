<div class="main">
  <div class="container">
    <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <%= form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f| %>
      <div>
        <%= f.label :avatar, 'アバター' %>
      </div>
      <div>
        <%= f.file_field :avatar %>
      </div>
      <div>
        <%= f.label :nickname, 'ハンドルネーム' %>
      </div>
      <div>
        <%= f.text_field :nickname, class: 'text' %>
      </div>
      <div>
        <%= f.label :last_name, '姓' %>
      </div>
      <div>
        <%= f.text_field :last_name, class: 'text' %>
      </div>
      <div>
        <%= f.label :first_name, '名前' %>
      </div>
      <div>
        <%= f.text_field :first_name, class: 'text' %>
      </div>
      <div>
        <%= f.label :kana_last_name, 'セイ' %>
      </div>
      <div>
        <%= f.text_field :kana_last_name, class: 'text' %>
      </div>
      <div>
        <%= f.label :kana_first_name, 'ナマエ' %>
      </div>
      <div>
        <%= f.text_field :kana_first_name, class: 'text' %>
      </div>
      <div>
        <%= f.label :introduction, '自己紹介' %>
      </div>
      <div>
        <%= f.text_area :introduction %>
      <div>
        <%= f.label :gender, '性別' %>
      </div>
      <div>
        <%= f.select :gender, Profile.genders.map { |k, v| [ I18n.t("enum.genders.#{k}"), k ] }, {}, { class: 'text' } %>
      </div>
      <div>
        <%= f.label :birthday, '生年月日' %>
      </div>
      <div>
        <%= f.date_field :birthday, class: 'text' %>
      </div>
      <div>
        <%= f.label :address, '住所' %>
      </div>
      <div>
        <%= f.text_field :address, class: 'text' %>
      </div>
      <div>
        <%= f.label :phone_number, '電話番号' %>
      </div>
      <div>
        <%= f.text_field :phone_number, class: 'text' %>
      </div>
      <div>
        <%= f.label :subscribed, '通知を受け取る' %>
        <%= f.check_box :subscribed %>
      </div>

      <%= f.submit '保存', class: 'btn-primary' %>
    <% end %>
  </div>
</div>